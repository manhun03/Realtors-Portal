@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<link href="~/Content/clients/menu/asset/login.css" rel="stylesheet" />

<div class="login-overlay">
    <div class="login-box">
        <button type="button" class="close-btn" id="closeLogin"><i class="bi bi-x-lg"></i></button>
        <div class="text-start mb-3">
            <div class="login-subtitle">Xin chào bạn</div>
            <div class="login-title">Đăng nhập để tiếp tục</div>
        </div>

        @using (Html.BeginForm("Login", "UserAccounts", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="input-group mb-3">
                <span class="input-group-text bg-white border-end-0"><i class="bi bi-person"></i></span>
                <input type="text" name="Email" class="form-control border-start-0" placeholder="Nhập email hoặc số điện thoại" required />
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text bg-white border-end-0"><i class="bi bi-lock"></i></span>
                <input type="password" name="PasswordHash" class="form-control border-start-0" placeholder="Nhập mật khẩu" required />
            </div>

            <button type="submit" class="btn btn-login">Đăng nhập</button>

            <div class="d-flex justify-content-between align-items-center mt-3">
                <div>
                    <input type="checkbox" id="remember" />
                    <label for="remember" class="ms-1 text-muted" style="font-size: 0.9rem;">Nhớ tài khoản</label>
                </div>
                <a href="/UserAccounts/ForgotPassword" class="text-danger text-decoration-none" style="font-size: 0.9rem;">Quên mật khẩu?</a>
            </div>

            <div class="divider">Hoặc</div>

            <button type="button" class="btn btn-google mb-3">
                <img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/google.svg" width="18" />
                Đăng nhập với Google
            </button>

            <p class="text-muted small text-center">
                Bằng việc tiếp tục, bạn đồng ý với
                <a href="#" class="text-danger text-decoration-none">Điều khoản sử dụng</a>,
                <a href="#" class="text-danger text-decoration-none">Chính sách bảo mật</a>.
            </p>
        }

        <div class="login-footer">
            Chưa là thành viên? <a href="/UserAccounts/Register">Đăng ký tại đây</a>
        </div>
    </div>
</div>
<script>
    document.getElementById("closeLogin").addEventListener("click", function () {
        window.location.href = "/Home/Index";
    });
</script>