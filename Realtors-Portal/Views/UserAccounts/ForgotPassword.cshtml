@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
<link href="~/Content/clients/menu/asset/login.css" rel="stylesheet" />

<div class="login-overlay">
    <div class="login-box">
        <button type="button" class="close-btn" id="closeForgot"><i class="bi bi-x-lg"></i></button>
        <div class="text-start mb-3">
            <div class="login-subtitle">Bạn quên mật khẩu?</div>
            <div class="login-title">Khôi phục tài khoản</div>
        </div>

        @using (Html.BeginForm("ForgotPassword", "UserAccounts", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="input-group mb-3">
                <span class="input-group-text bg-white border-end-0"><i class="bi bi-envelope"></i></span>
                <input type="email" name="Email" class="form-control border-start-0" placeholder="Nhập email đã đăng ký" required />
            </div>

            <button type="submit" class="btn btn-login">Gửi mật khẩu mới</button>

            <div class="mt-4 text-center">
                <p class="text-muted small">Chúng tôi sẽ gửi liên kết đặt lại mật khẩu vào email của bạn.</p>
            </div>
        }

        <div class="login-footer">
            <a href="/UserAccounts/Login"><i class="bi bi-arrow-left"></i> Quay lại đăng nhập</a>
        </div>
    </div>
</div>

<script>
    document.getElementById("closeForgot").addEventListener("click", function () {
        window.location.href = "/Home/Index";
    });
</script>
