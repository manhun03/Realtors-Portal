@model Realtors_Portal.Models.UserAccount

@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/clients/menu/asset/register.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<div class="register-overlay">
    <div class="register-box">
        <button type="button" class="close-btn" id="closeRegister"><i class="bi bi-x-lg"></i></button>
        <div class="text-start mb-3">
            <div class="register-subtitle">Xin chào bạn mới</div>
            <div class="register-title">Tạo tài khoản để bắt đầu</div>
        </div>

        @using (Html.BeginForm("Register", "UserAccounts", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="input-group mb-3">
                <span class="input-group-text bg-white border-end-0"><i class="bi bi-person"></i></span>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control border-start-0", placeholder = "Tên đăng nhập", required = "required" })
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text bg-white border-end-0"><i class="bi bi-envelope"></i></span>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control border-start-0", placeholder = "Email", type = "email", required = "required" })
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text bg-white border-end-0"><i class="bi bi-telephone"></i></span>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control border-start-0", placeholder = "Số điện thoại", required = "required" })
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text bg-white border-end-0"><i class="bi bi-lock"></i></span>
                @Html.PasswordFor(m => m.PasswordHash, new { @class = "form-control border-start-0", placeholder = "Mật khẩu", required = "required" })
            </div>

            <button type="submit" class="btn btn-register">Đăng ký</button>


            <div class="divider">Hoặc</div>

            <button type="button" class="btn btn-google mb-3">
                <img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/google.svg" width="18" />
                Đăng ký với Google
            </button>

            <p class="text-muted small text-center">
                Khi đăng ký, bạn đồng ý với
                <a href="#" class="text-danger text-decoration-none">Điều khoản sử dụng</a> &
                <a href="#" class="text-danger text-decoration-none">Chính sách bảo mật</a>.
            </p>
        }

        <div class="register-footer">
            Đã có tài khoản? <a href="/UserAccounts/Login">Đăng nhập ngay</a>
        </div>
    </div>
</div>
<script>
    document.getElementById("closeRegister").addEventListener("click", function () {
        window.location.href = "/Home/Index"; 
    });
</script>