@model IEnumerable<Realtors_Portal.Models.UserAccount>

@{
    ViewBag.Title = "Danh sách tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-3">
    <!-- Thông báo thành công / lỗi -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fa fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fa fa-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fa fa-users"></i> @ViewBag.Title</h2>
        <a href="@Url.Action("Create")" class="btn btn-success">
            <i class="fa fa-plus"></i> Thêm tài khoản
        </a>
    </div>

    <!-- Bảng dữ liệu -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover w-100">
            <thead class="table-dark">
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Role</th>
                    <th>Xác minh</th>
                    <th>Trạng thái</th>
                    <th>Ngày tạo</th>
                    <th>Cập nhật</th>
                    <th class="text-center" style="width:150px;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted py-4">
                            <i class="fa fa-info-circle"></i> Chưa có dữ liệu
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Username</strong></td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>
                                @if (item.Role == "Admin")
                                {
                                    <span class="badge bg-danger">Admin</span>
                                }
                                else if (item.Role == "Employee")
                                {
                                    <span class="badge bg-warning text-dark">Employee</span>
                                }
                                else if (item.Role == "Agent")
                                {
                                    <span class="badge bg-info text-dark">Agent</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Customer</span>
                                }
                            </td>
                            <td>
                                @if (item.IsVerified == true)
                                {
                                    <span class="badge bg-success">Đã xác minh</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Chưa xác minh</span>
                                }
                            </td>
                            <td>
                                @if (item.IsActive == true)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Ngừng</span>
                                }
                            </td>
                            <td>@item.CreatedAt</td>
                            <td>@item.UpdatedAt</td>
                            <td class="text-center">
                                <a href="@Url.Action("Edit", new { id = item.UserID })" class="btn btn-sm btn-warning" title="Chỉnh sửa">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.UserID })" class="btn btn-sm btn-danger" title="Xóa"
                                   onclick="return confirm('Bạn có chắc muốn xóa tài khoản này không?');">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
