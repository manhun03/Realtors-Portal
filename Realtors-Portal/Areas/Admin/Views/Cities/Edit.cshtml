@model Realtors_Portal.Models.City

@{
    ViewBag.Title = "Chỉnh sửa thành phố";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<<div class="container-fluid mt-4">
    <!-- Tiêu đề & nút quay lại -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fa fa-edit"></i> @ViewBag.Title</h2>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fa fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card shadow-sm">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                @Html.HiddenFor(model => model.CityID)

                <!-- Tên thành phố -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.CityName, "Tên thành phố", htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(model => model.CityName, new { @class = "form-control", placeholder = "Nhập tên thành phố..." })
                    @Html.ValidationMessageFor(model => model.CityName, "", new { @class = "text-danger" })
                </div>

                <!-- Trạng thái hoạt động -->
                <div class="form-check form-switch mb-3">
                    @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-check-input", id = "IsActive" })
                    <label class="form-check-label fw-bold" for="IsActive">Kích hoạt hiển thị</label>
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                </div>

                <!-- Nút lưu -->
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu thay đổi
                    </button>
                </div>
            </div>
        </div>
    }
</div>
