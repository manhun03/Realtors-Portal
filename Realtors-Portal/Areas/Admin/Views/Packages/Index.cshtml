@model IEnumerable<Realtors_Portal.Models.Package>

@{
    ViewBag.Title = "Danh sách gói dịch vụ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-3">
    <!-- Thông báo thành công / lỗi -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fa fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fa fa-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fa fa-box"></i> @ViewBag.Title</h2>
        <a href="@Url.Action("Create")" class="btn btn-success">
            <i class="fa fa-plus"></i> Thêm gói mới
        </a>
    </div>

    <!-- Bảng dữ liệu -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover w-100">
            <thead class="table-dark">
                <tr>
                    <th>Tên gói</th>
                    <th>Loại</th>
                    <th>Giá</th>
                    <th>Thời hạn</th>
                    <th>Giảm giá (%)</th>
                    <th>Hệ số (x lần)</th>
                    <th>Trạng thái</th>
                    <th>Ngày tạo</th>
                    <th>Cập nhật</th>
                    <th class="text-center" style="width:150px;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="10" class="text-center text-muted py-4">
                            <i class="fa fa-info-circle"></i> Chưa có dữ liệu
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.PackageName</strong><br />
                                <small class="text-muted">@item.Description</small>
                            </td>
                            <td>
                                @if (item.PackageType == "Listing")
                                {
                                    <span class="badge bg-info">Gói Tin</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary">Hội Viên</span>
                                }
                            </td>
                            <td>@String.Format("{0:N0} ₫", item.Price)</td>
                            <td>@item.DurationDays ngày</td>
                            <td>@item.DiscountPercent %</td>
                            <td>@item.Multiplier x</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Ngừng</span>
                                }
                            </td>
                            <td>@item.CreatedAt</td>
                            <td>@item.UpdatedAt</td>
                            <td class="text-center">
                                <a href="@Url.Action("Edit", new { id = item.PackageID })" class="btn btn-sm btn-warning" title="Chỉnh sửa">
                                    <i class="fa fa-edit"></i>
                                </a>
                               
                                <a href="@Url.Action("Delete", new { id = item.PackageID })" class="btn btn-sm btn-danger" title="Xóa"
                                   onclick="return confirm('Bạn có chắc muốn xóa gói này không?');">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
