@model Realtors_Portal.Models.SystemConfig

@{
    ViewBag.Title = "Chỉnh sửa cấu hình hệ thống";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fa fa-edit"></i> @ViewBag.Title</h2>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fa fa-arrow-left"></i> Quay lại
        </a>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.ID)

        <div class="card shadow-sm">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="mb-3">
                    @Html.LabelFor(m => m.ConfigKey, "Khóa cấu hình", new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.ConfigKey, new { @class = "form-control", readonly = "readonly" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.ConfigValue, "Giá trị", new { @class = "form-label fw-bold" })
                    @Html.TextAreaFor(m => m.ConfigValue, new { @class = "form-control", rows = 3 })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.ConfigType, "Loại cấu hình", new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.ConfigType, new { @class = "form-control" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Description, "Mô tả", new { @class = "form-label fw-bold" })
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 2 })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.UpdatedBy, "Người cập nhật", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("UpdatedBy", null, "-- Chọn nhân viên --", new { @class = "form-select" })
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu thay đổi
                    </button>
                </div>
            </div>
        </div>
    }
</div>
